@model Products

<h2>@Model.Name</h2>

<div class="thumbnail">
    <img src="@Model.ImageUrl" alt="@Model.Name" />
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price</h3>
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        <h4>@Model.ShortDescription</h4>
        <p>@Model.LongDescription</p>
        <div class="addToCart">
            <p class="btn-block">
                <a class="btn btn-primary"
                   asp-controller="ShopingCard"
                   asp-action="AddToShopingCard"
                   asp-route-id="@Model.Id">Add to card</a>
            </p>
        </div>
    </div>
</div>

