@model ShopingCardViewModel

    <h2>Your shopping card</h2>
    <h4>Products in your shopping cards</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Selected amount</th>
                <th scope="col">Product</th>
                <th scope="col" class="text-right">Price</th>
                <th scope="col" class="text-right">Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ShopingCard.ShopingCards)
            {
                <tr scope="row">
                    <td class="text-center">@item.AmountOfProducts</td>
                    <td class="text-left">@item.Products.Name</td>
                    <td class="text-right">@item.Products.Price.ToString("c")</td>
                    <td class="text-right">@((item.AmountOfProducts * item.Products.Price).ToString("c"))</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" class="text-right">Total:</th>
                <td class="text-right">@Model.ShopingCard.GetTotalShopingCards().ToString("c")</td>
            </tr>
        </tfoot>
    </table>
