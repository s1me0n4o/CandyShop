@model Products

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageTumbnailUrl" alt="">
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a>
            </h3>
            <p>@Model.ShortDescription</p>
        </div>
        <div class="addToCart">
            <p class="btn-block">
                <a class="btn btn-primary"
                   asp-controller="ShopingCard"
                   asp-action="AddToShopingCard"
                   asp-route-id="@Model.Id">Add to card</a>
            </p>
        </div>
    </div>
</div>

